{
  "version": 5,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 24,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "windows-base",
      "description": "Target Windows with the Visual Studio development environment.",
      "hidden": true,
      "generator": "Visual Studio 17 2022",
      "binaryDir": "${sourceDir}/out/build/${presetName}",
      "installDir": "${sourceDir}/out/install/${presetName}",
      "architecture": {
        "value": "x64",
        "strategy": "external"
      },
      "environment": {
        "NVTOOLSEXT_PATH": "C:\\Program Files\\NVIDIA Corporation\\Nsight Systems 2023.1.2\\target-windows-x64\\nvtx",
        "FINUFFT_PREFIX": "D:\\Packages\\finufft\\lib\\cmake"
        //"PYTHON_PATH": "D:\\miniconda3\\envs\\v311",
        //"PYTHONHOME": "D:\\miniconda3\\envs\\v311"
      },
      "cacheVariables": {
        "CMAKE_C_COMPILER": "cl.exe",
        "CMAKE_CXX_COMPILER": "cl.exe",
        "CMAKE_CONFIGURATION_TYPES": {
          "type": "STRING",
          "value": "Release;Debug"
        },
        "CMAKE_TOOLCHAIN_FILE": {
          "type": "FILEPATH",
          "value": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake"
        },
        "VCPKG_TARGET_TRIPLET": {
          "type": "STRING",
          "value": "x64-windows"
        },
        "BUILD_CUDA": {
          "type": "BOOL",
          "value": "ON"
        },
        "CMAKE_CUDA_ARCHITECTURES": {
          "type": "STRING",
          "value": "60;75;89"
        }
      },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      }
    },
    {
      "name": "x64-debug-cuda",
      "displayName": "x64 Debug CUDA",
      "description": "Target Windows Visual Studio Env(64-bit) - build with CUDA. (Debug)",
      "inherits": "windows-base",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_PREFIX_PATH": {
          "type": "FILEPATH",
          "value": "$env{TORCH_CUDA_DIR}/debug;$env{FINUFFT_PREFIX};$env{AF_PATH}/cmake"
        }
      }
    },
    {
      "name": "x64-release-cuda",
      "displayName": "x64 Release CUDA",
      "description": "Target Windows Visual Studio Env(64-bit) - build with CUDA. (Release)",
      "inherits": "windows-base",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "CMAKE_PREFIX_PATH": {
          "type": "FILEPATH",
          "value": "$env{TORCH_CUDA_DIR}/release;$env{FINUFFT_PREFIX};$env{AF_PATH}/cmake"
        }
      }
    }
  ],
  "buildPresets": [
    {
      "name": "x64-debug-cuda",
      "configurePreset": "x64-debug-cuda",
      "configuration": "Debug"
    },
    {
      "name": "x64-release-cuda",
      "configurePreset": "x64-release-cuda",
      "configuration": "Release"
    }
  ],
  "testPresets": []
}
